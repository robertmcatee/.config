# My custom colors. Based on achievements

set $black #16161D
set $red   #B21B1B
set $gold  #FFCC00
set $white #FFFFFF

# class                 border  bground text    indicator child_border
client.focused          $gold   $black  $gold   $gold     $gold
client.focused_inactive $red    $black  $red    $red      $red
client.unfocused        $red    $black  $red    $red      $red
client.urgent           $white  $black  $white  $white    $white
client.placeholder      #555555 #555555 #FFFFFF #555555   #555555

client.background       #FFFFFF

bar {
    position top
    status_command i3status
    separator_symbol "~"
    tray_output primary
    tray_padding 5
    colors {
        background $black
        statusline $red
        separator  $gold

        focused_workspace  $gold   $black  $gold
        active_workspace   $white  $black  $white
        inactive_workspace $black  $black  $red
        urgent_workspace   $white  $white  $red
        binding_mode       #5F676A #5F676A #FFFFFF
  }
}

